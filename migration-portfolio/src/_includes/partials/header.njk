<header class="px-6 py-8 md:px-12 md:py-12 flex justify-between items-start">
  <div>
    <a
      href="/"
      class="text-accent-red hover:opacity-80 transition-opacity font-serif text-lg tracking-wide {% if page.url == '/' %}font-bold{% endif %}"
    >
      Thamires Helaysa
    </a>
  </div>
  
  <nav class="flex gap-6 md:gap-8 text-sm md:text-base font-light tracking-wider">
    {% for link in navigation.links %}
      <a
        href="{{ link.url }}"
        class="hover:text-accent-red transition-colors {% if page.url == link.url %}text-accent-red font-medium{% endif %}"
        {% if page.url == link.url %}aria-current="page"{% endif %}
        {% if link.url.startsWith("http") %}
          rel="noopener noreferrer"
          target="_blank"
        {% else %}
          rel="internal"
        {% endif %}
      >
        {{ link.label }}
      </a>
    {% endfor %}
  </nav>

</header>