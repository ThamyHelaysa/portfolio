/*
* Imports
*/
@import 'https://fonts.googleapis.com/css?family=Roboto:300,400,500';

/*
* Variables
*/
sm = 16px
cz = #f0f0f0


*
  -webkit-tap-highlight-color: rgba(0,0,0,0);

html, body 
  height 100vh
  color #555
  font-family "Roboto", "Helvetica", "Arial", sans-serif
  line-height 1.5
  text-align center

.wrapper 
  position relative
  display grid
  grid-gap sm
  grid-template .5fr 2fr .5fr/1fr
  height 100%
  padding sm

.header
  background cz
  z-index 9

.menu
  grid-row 1/2

.content
  position absolute
  grid-column 1/2
  grid-row 2/3
  top 0
  left 0
  right 0
  bottom 0
  transition all 300ms ease
  .openArticle &
    height 100vh
    top calc(50% - 50vh)



.slider 
  position relative
  width 100vw
  height 100%
  margin 0 -16px
  overflow hidden
  // &:hover .item
  //   height 100vh
  &-list 
    position relative
    display grid
    grid-gap sm
    grid-auto-flow column
    grid-template-columns 0
    grid-auto-columns "calc(100% - %s * 2)" % sm // equals -> calc(80vw - 16px)
    grid-template-rows 1fr
    height 100%
    transition transform 400ms cubic-bezier(.17,.87,.49,.99)
    scroll-snap-type x proximity
    &::before, &::after
      content ''
      width 0
  &-item 
    //position absolute
    display block
    justify-self center
    width 100%
    height 100%
    padding sm
    background cz
    transition height 500ms 
  &-prev, &-next
    position absolute
    display flex
    align-items center
    justify-content center
    top calc(50% - 25px)
    width 50px
    height 50px
    
  &-prev
    left auto
    right calc(100% - 50px)
  &-next
    left calc(100% - 50px)
    right auto


.footer 
  grid-row 3/4
  background cz
  z-index 9
