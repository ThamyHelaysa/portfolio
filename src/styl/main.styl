@import url('https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap');

/*
* Variables
*/
sm = 16px
cz = #f0f0f0



*
  -webkit-tap-highlight-color: rgba(0,0,0,0);

html, body 
  height 100%
  min-height 100%!important
  color #555
  font-family 'Poppins', sans-serif;
  line-height 1.5
  text-align center
  overflow hidden

.wrapper 
  position relative
  display grid
  grid-gap sm
  grid-template .3fr 2fr .3fr/1fr
  height 100%
  padding sm

.header
  display flex
  align-items center
  justify-content space-between
  margin -(sm)
  padding sm
  z-index 9

.close 
  opacity 0
  visibility hidden
  transition all 300ms 100ms ease
  .openArticle &
    opacity 1
    visibility visible

.menu
  grid-row 1/2

.content
  position absolute
  grid-column 1/2
  grid-row 2/3
  top 0
  left 0
  right 0
  bottom 0
  height 100%
  transition all 300ms ease
  // .openArticle &
  //   height 100vh
  //   top calc(50% - 50vh)



.slider 
  position relative
  width 100vw
  height 100%
  margin 0 -16px
  overflow hidden
  > .list 
    position relative
    display grid
    grid-gap sm
    grid-auto-flow column
    grid-template-columns 0
    grid-auto-columns "calc(100% - %s * 2)" % sm // equals -> calc(80vw - 16px)
    grid-template-rows 1fr
    height 100%
    transition transform 400ms cubic-bezier(.17,.87,.49,.99)
    scroll-snap-type x proximity
    &::before, &::after
      content ''
      width 0
  .item 
    //position absolute
    display block
    justify-self center
    width 100%
    height 100%
    padding sm
    background #666
    border 1px solid #000
    transition height 500ms 

.controls
  .prev, .next
    position absolute
    display flex
    align-items center
    justify-content center
    top calc(50% - 25px)
    width 50px
    height 50px
    opacity 1
    transition all 500ms ease
    visibility visible
    .openArticle &
      opacity 0
      visibility hidden
  .prev
    left auto
    right calc(100% - 50px)
    .openArticle &
      transform translateX(-100%)
  .next
    left calc(100% - 50px)
    right auto
    .openArticle &
      transform translateX(100%)


#itemcontent
  position absolute
  left 0
  width 100vw
  height 100%
  background #212121
  opacity 0
  visibility hidden
  transform translateY(100%)
  transition transform 500ms ease, opacity 500ms ease, visibility 500ms ease
  z-index -1
  .openArticle &
    transform translateY(0%)
    opacity 1
    visibility visible
    z-index 8



.footer 
  grid-row 3/4
  background cz
  z-index 9
