{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "allowJs": true,          
    "checkJs": false,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "types": ["node"]
  },
  "include": ["eleventy.config.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}