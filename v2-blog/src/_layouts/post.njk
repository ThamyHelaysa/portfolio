---
layout: base.njk
inlineStyles: 
  - "css/markdown.css"
---

<div class="max-w-4xl mx-auto">
  <h1>{{ title }}</h1>

  <article class="bg-warm-bg py-4 px-2 md:py-16 md:px-10">
    <p class="flex flex-col gap-y-2 mb-20!">
      {% if date %}
      {% set formatedDate = date | formatDatefull(date) %}
        <small class="text-xs font-mono text-accent-primary/60 uppercase tracking-widest group-hover:text-accent-primary transition-colors">
        Posted on: {{ formatedDate }}</small>
      {% endif %}

      {% if updateDate %}
      {% set formatedLastUpDate = updateDate | formatDatefull(updateDate) %}
        <small class="text-xs font-mono text-accent-primary/60 uppercase tracking-widest group-hover:text-accent-primary transition-colors">
        Last update: {{ formatedLastUpDate }}</small>
      {% endif %}
    </p>

    {{ content | safe }}
    
  </article>

  <nav>
    {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">Previous</a>{% endif %}
    {% if pagination.href.next %}<a href="{{ pagination.href.next }}">Next</a>{% endif %}
  </nav>
</div>
