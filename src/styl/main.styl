/*
* Variables
*/
sm = 16px


html, body 
  height 100vh

.wrapper 
  display grid
  grid-template .5fr 2fr .5fr/1fr
  height 100%
  padding sm

.menu
  grid-row 1/2

.content 
  grid-row 2/3


.slider 
  width 100vw
  height 100%
  margin 0 -16px


.slider-list 
  display grid
  grid-auto-flow column
  grid-template-columns sm
  grid-auto-columns "calc(80% - %s)" % sm
  grid-template-rows 1fr
  overflow-x scroll
  scroll-snap-type x proximity
  &::before, &::after
    content ''
    width 16px


.slider-item 
  justify-self center


.footer 
  grid-row 3/4
