<header class="sticky top-0 left-0 flex justify-between items-start bg-warm-bg transition px-4 py-6 md:px-8 md:py-8 z-9">
  <div>
    <a
      href="/"
      class="text-accent-red hover:opacity-80 transition-opacity font-serif text-lg tracking-wide {% if page.url == '/' %}font-bold{% endif %}"
    >
      Thamires Helaysa
    </a>
  </div>
  
  <div class="flex flex-col md:flex-row items-start md:items-center gap-6 md:gap-8 w-full md:w-auto">

    <nav class="flex gap-6 md:gap-8 text-sm md:text-base font-light tracking-wider">
      {% for link in navigation.links %}
        <a
          href="{{ link.url }}"
          class="hover:bg-accent-red hover:text-warm-bg transition-colors {% if page.url == link.url %}text-accent-red font-medium{% endif %}"
          {% if page.url == link.url %}aria-current="page"{% endif %}
          {% if link.url.startsWith("http") %}
            rel="noopener noreferrer"
            target="_blank"
          {% else %}
            rel="internal"
          {% endif %}
        >
          {{ link.label }}
        </a>
      {% endfor %}
    </nav>

    <div class="hidden md:block w-px h-4 bg-accent-red/20"></div>

    <theme-toggle data-template-id="theme-toggle-tmpl"></theme-toggle>

  </div>

</header>