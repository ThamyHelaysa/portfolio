/*
* Imports
*/
//@import 'https://fonts.googleapis.com/css?family=Roboto:300,400,500';
@import url('https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap');
@import url('https://fonts.googleapis.com/css?family=Nunito:300&display=swap');

/*
* Variables
*/
sm = 16px
x  = 1s

cubic = cubic-bezier(.75,-1.27,.3,2.3)

/*
* Animations
*/

/* The typing effect */
@keyframes typing {
  from { max-width: 0 }
  to { max-width: 700px }
}

@keyframes typing-back {
  from { max-width: 700px }
  to { max-width: 0 }
}

/* The typewriter cursor effect */
@keyframes blink-caret {
  from, to { border-color: transparent }
  50% { border-color: orange; }
}


*
  -webkit-tap-highlight-color: rgba(0,0,0,0);

html, body 
  position relative
  height 100%
  min-height 100%!important
  background var(--brightness)
  color #555
  font-family 'Poppins', sans-serif;
  line-height 1.5
  text-align center
  overflow hidden

.loader
  position fixed
  top 0
  right 0
  left 0
  bottom 0
  width 100%
  height 100%
  background var(--brightness)
  transition transform 500ms ease
  transform translateY(100%);
  z-index 15
  .content
    display flex
    align-items center
    justify-content center
  .--loading &
    transform translateY(0%);

.welcome
  position relative
  display flex
  align-items center
  justify-content center
  padding-right 3vw
  color var(--darkness)
  font-size 5vw
  font-family 'Nunito', sans-serif
  white-space nowrap 
  .codeline
    display block
    margin-right 3vw
  .var 
    color var(--blue)
  .name
    &::after
      display inline-block
      content '='
      margin 0 1vw 0 3vw
      color var(--pink)
      opacity 1
  .key
    opacity 1
  .char
    display inline-block
    max-width 0
    overflow hidden 
    margin 0 auto
    letter-spacing .10em
    &:last-child
      animation typing x 8.5s steps(8, end) forwards
  for i in 1 2 3 4
    .char:nth-of-type({i})
      animation typing x (2 * x) * (i - 1) steps(8, end) forwards, typing-back x (2 * x) * (i - 1) + x steps(8, end) forwards
    
  
  .letter
    display inline-block
    color #E1523C
  &::before
    position absolute
    content '}'
    top 50%
    right -1vw
    transform translateY(-50%)
  &::after
    position absolute
    content ''
    top 0
    right 2vw
    display inline-block
    height 100%
    border-right .15em solid orange; /* The typwriter cursor */
    animation blink-caret .75s step-end infinite;


.wrapper 
  position relative
  display grid
  grid-gap sm
  grid-template .3fr 2fr .3fr/1fr
  height 100%
  padding sm

.header
  display flex
  align-items center
  justify-content space-between
  margin -(sm)
  padding sm
  z-index 9

#logo
  font-size 1.5rem
  font-family 'Nunito', sans-serif
  font-weight bold
  letter-spacing .15em
  .key
    color var(--darkness)
  .link
    color var(--highlight)

.close 
  opacity 0
  visibility hidden
  transition all 300ms 100ms ease
  [class*="open-"] &
    opacity 1
    visibility visible

.menu
  grid-row 1/2

.content
  position absolute
  grid-column 1/2
  grid-row 2/3
  top 0
  left 0
  right 0
  bottom 0
  height 100%
  transition all 300ms ease



.slider 
  position relative
  width 100vw
  height 100%
  margin 0 -16px
  overflow hidden
  > .list 
    position relative
    display grid
    grid-gap sm
    grid-auto-flow column
    grid-template-columns 0
    grid-auto-columns "calc(100% - %s * 2)" % sm // equals -> calc(80vw - 16px)
    grid-template-rows 1fr
    height 100%
    transition transform 400ms cubic-bezier(.17,.87,.49,.99)
    scroll-snap-type x proximity
    &::before, &::after
      content ''
      width 0
  .item 
    //position absolute
    display block
    justify-self center
    width 100%
    height 100%
    padding sm
    background #666
    border 1px solid #000
    transition height 500ms 

.controls
  .prev, .next
    position absolute
    display flex
    align-items center
    justify-content center
    top calc(50% - 25px)
    width 50px
    height 50px
    opacity 1
    transition all 500ms ease
    visibility visible
    [class*="open-"] &
      opacity 0
      visibility hidden
  .prev
    left auto
    right calc(100% - 50px)
    [class*="open-"] &
      transform translateX(-100%)
  .next
    left calc(100% - 50px)
    right auto
    [class*="open-"] &
      transform translateX(100%)


.project
  position absolute
  left 0
  width 100vw
  height 100%
  background var(--darkness)
  opacity 0
  visibility hidden
  transform translateY(100%)
  transition transform 500ms ease, opacity 500ms ease, visibility 500ms ease
  z-index 8
  &.openArticle
    transform translateY(0%)
    opacity 1
    visibility visible



.footer 
  grid-row 3/4
  background cz
  z-index 9
