/*
* Variables
*/
sm = 16px
sec  = 1.5s

cubic = cubic-bezier(.75,-1.27,.3,2.3)

hex = polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%)
hep = polygon(50% 0%, 90% 20%, 100% 60%, 75% 100%, 25% 100%, 0% 60%, 10% 20%)
bol = circle(50% at 50% 50%)
parallel = polygon(20% 0%, 100% 0%, 80% 100%, 0% 100%)
triang = polygon(50% 0%, 0% 100%, 100% 100%)
rom = polygon(50% 0%, 100% 50%, 50% 100%, 0% 50%)
closeX = polygon(20% 0%, 0% 20%, 30% 50%, 0% 80%, 20% 100%, 50% 70%, 80% 100%, 100% 80%, 70% 50%, 100% 20%, 80% 0%, 50% 30%)

/*
* Animations
*/

/* The typing effect */
@keyframes typing {
  from { max-width: 0 }
  to { max-width: var(--w-animation) }
}

@keyframes typing-back {
  from { max-width: var(--w-animation) }
  to { max-width: 0 }
}

/* The typewriter cursor effect */
@keyframes blink-caret {
  from, to { border-color: transparent }
  50% { border-color: orange; }
}


/**
 * from: https://tympanus.net/codrops/2016/03/21/animated-animals-css-svg/
 */
@keyframes glitchvision {
  0 {
    filter: url("#squiggly-0");
  }
  25% {
    filter: url("#squiggly-1");
  }
  50% {
    filter: url("#squiggly-2");
  }
  75% {
    filter: url("#squiggly-3");
  }
  100% {
    filter: url("#squiggly-4");
  }
}

