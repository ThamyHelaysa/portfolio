.none
  display none!important

.ico
  width 1rem
  height 1rem
  fill var(--brightness)

*
  -webkit-tap-highlight-color: rgba(0,0,0,0);

*,
*::before,
*::after 
  box-sizing: border-box


ul[class],ol[class]
  padding: 0


body,h1,h2,h3,h4,p,ul[class],ol[class],li,figure,figcaption,blockquote,dl,dd
  margin: 0


body 
  min-height: 100vh
  scroll-behavior: smooth
  text-rendering: optimizeSpeed
  line-height: 1.5


ul[class],ol[class]
  list-style: none

a:not([class])
  text-decoration-skip-ink: auto

img
  max-width: 100%
  display: block


input,button,textarea,select 
  font: inherit

@media(prefers-reduced-motion:reduce) 
  * 
    animation-duration: .01ms !important
    animation-iteration-count: 1 !important
    transition-duration: .01ms !important
    scroll-behavior: auto !important


html, body 
  position relative
  height 100%
  min-height 100%!important
  background var(--darkness)
  color var(--brightness)
  font-family 'Poppins', sans-serif;
  line-height 1.5
  text-align center
  overflow hidden
  &::-webkit-scrollbar,
  &::-webkit-scrollbar-button,
  &::-webkit-scrollbar-track,
  &::-webkit-scrollbar-track-piece,
  &::-webkit-scrollbar-thumb,
  &::-webkit-scrollbar-corner,
  &::-webkit-resizer
    width 0!important
    height 0!important
    margin 0!important
    padding 0!important

.svg-sprites
  position fixed
  top -9999px
  left -9999px

.loader
  position fixed
  display flex
  align-items center
  justify-content center
  top 0
  right 0
  left 0
  bottom 0
  width 100%
  height 100%
  background var(--darkness)
  transition transform 500ms ease
  transform translateY(100%);
  z-index 16
  .content
    display flex
    align-items center
    justify-content center
  .--loading &
    transform translateY(0%);
  

.welcome
  position relative
  display flex
  align-items center
  justify-content center
  padding-right 3vw
  color var(--brightness)
  font-size 5vw
  font-family 'Nunito', sans-serif
  white-space nowrap 
  .codeline
    display block
    margin-right 3vw
  .var 
    color var(--blue)
  .name
    &::after
      display inline-block
      content '='
      margin 0 1vw 0 3vw
      color var(--pink)
      opacity 1
  .key
    opacity 1
  .char
    display inline-block
    max-width 0
    overflow hidden 
    margin 0 auto
    letter-spacing .10em
  for i in 1 2 3 4
    .char:nth-of-type({i})
      animation typing sec (2 * sec) * (i - 1) steps(20, end) forwards, typing-back sec (2 * sec) * (i - 1) + sec steps(20, end) forwards
  .char.bem-vindo
    animation typing 1.5s 9s steps(20, end) forwards
  .letter
    display inline-block
    color var(--highlight)
  &::before
    position absolute
    content '}'
    top 50%
    right -1vw
    transform translateY(-50%)
  &::after
    position absolute
    content ''
    top 0
    right 2vw
    display inline-block
    height 100%
    border-right .15em solid orange; /* The typwriter cursor */
    animation blink-caret .75s step-end infinite;
  .open &
    .char 
      animation-name typing
      animation-delay 0s
  .open-tcc & 
    .char:not(.tcc)
      animation none
  .open-proj1 &
    .char:not(.projetos)
      animation none

.wrapper 
  position relative
  display grid
  grid-gap sm
  grid-template 10vh 2fr 10vh/1fr
  height 100%
  padding sm

.header
  position fixed
  display flex
  align-items center
  justify-content space-between
  width "calc(100% - %s * 2)" % sm 
  padding 0 sm
  z-index 9

#logo
  display flex
  align-items center
  justify-content space-between
  font-size 1.5rem
  font-family 'Nunito', sans-serif
  font-weight bold
  letter-spacing .15em
  .ico
    width 3rem
    height 3rem

.close 
  opacity 0
  visibility hidden
  transition all 300ms 100ms ease
  .open &
    opacity 1
    visibility visible

.menu
  grid-row 1/2

.main
  //position absolute
  grid-column 1/2
  grid-row 2/3
  top 0
  left 0
  right 0
  bottom 0
  height 100%
  transition all 300ms ease

.btn
  min-width 50px
  min-height 50px
  padding 5px
  background none
  border 0
  box-shadow none
  color var(--brightness)
  &slider
    font-size 1rem
  #logo &
    width 0
    padding 0
    overflow hidden
  .open-tcc #logo .tcc
    width 100%
    padding 5px
    overflow visible


.slider 
  //position relative
  width 100%
  height 100%
  overflow hidden
  .open &
    overflow visible
  > .list 
    //position relative
    display grid
    grid-gap sm
    grid-auto-flow column
    grid-template-columns 0
    grid-auto-columns "calc(100% - %s * 2)" % sm // equals -> calc(80vw - 16px)
    grid-template-rows 1fr
    height 100%
    transition transform 400ms cubic-bezier(.17,.87,.49,.99)
    scroll-snap-type x proximity
    &::before, &::after
      content ''
      width 0
  .item 
    position relative
    display block
    justify-self center
    width 100%
    height 100%
    padding sm
    transition all 500ms .4s
  for i in 1 2 3 4 5
    .item:nth-last-child({i}) .content
      z-index i
  .title
    position absolute
    top 50%
    left sm
    color var(--darkness)
    font-size calc(1.3rem + 4vw)
    font-weight 900
    transition all 300ms ease
    text-transform uppercase
    opacity 1
    visibility visible
    z-index 9
    .open &
      opacity 0
      visibility hidden
    .text
      padding 5px 10px
      background var(--brightness)
  .content
    position absolute
    top 50%
    left 50%
    width 100vw
    height 100vh
    margin -50vh -50vw
    background url(../media/teste-imagem.jpg) no-repeat 50%
    background-size cover
    transform scale(.7)
    transition all .4s ease
    // &::before
    //   position absolute
    //   content ''
    //   width 50%
    //   height 100%
    //   top 0
    //   left 50%
    //   filter grayscale(1)
    // will-change transform
    //animation: scale-down-center 1s cubic-bezier(0.680, -0.550, 0.265, 1.550) normal both;
  [data-url="tcc"] .content
    &::before
      background url(../media/teste-imagem.jpg) no-repeat 50%
      background-size cover
  [data-url="proj1"] .content
    background url(../media/dadaismo.jpg) no-repeat 50%
    background-size cover
  .open-tcc & [data-url="tcc"] .content
    transform: scale(1);
  .open-proj1 & [data-url="proj1"] .content
    transform: scale(1);

.squiggle {
  animation: squigglevision 0.3s infinite;
}

.controls
  grid-column 1/2
  grid-row 2/3
  @media (max-width: 992px)
    display none
  .prev, .next
    position absolute
    display flex
    align-items center
    justify-content center
    top calc(50% - 25px)
    width 50px
    height 50px
    opacity 1
    transition all 500ms ease
    visibility visible
    z-index 15
    span
      display none
    .open &
      opacity 0
      visibility hidden
  .prev
    left auto
    right calc(100% - 50px)
    .open &
      transform translateX(-100%)
    .ico
      transform rotate(180deg)
  .next
    left calc(100% - 50px)
    right auto
    .open &
      transform translateX(100%)


.project
  position absolute
  left 0
  width 100vw
  //background var(--darkness)
  padding-top 80vh
  opacity 0
  visibility hidden
  transform translateY(100%)
  transition all 1s ease
  z-index 8
  &.openArticle
    transform translateY(0%)
    opacity 1
    visibility visible
  p, li, .text
    font-family 'PT Serif', serif;
  > .content
    height 100%
    padding 0 30px
    background var(--darkness)
    .open-tcc &
      background var(--purewhite)
      color var(--darkness)
  .title
    color var(--brightness)
    &.--big
      overflow hidden
      position absolute
      top 50vh
      left 50vw
      width 100%
      text-align center
      text-transform: uppercase
      transform translate(-50%,-50%)
      span
        font-size calc(1.5rem + 5vw)
        font-weight 900
    &.--md
      display block
      margin-bottom 2rem
      color var(--darkness)
      text-align left
      font-size calc(1.5rem + 2vw)
  .text
    text-align justify
    font-size calc(.65rem + .5vw)
    @media (max-width 568px)
      font-size 1rem
  .--bg
    display inline-block
    padding 0 5px
    background var(--darkness)
    color var(--brightness)
    font-family 'Poppins'
  .inner
    max-width 1200px
    margin-left auto
    margin-right auto
    padding-top 20vh
  .detail
    margin-bottom 2rem
  .rivals
    display grid
    grid-template-columns repeat(auto-fit, minmax(300px, 1fr))
    grid-gap 20px
    margin 5rem 0
    padding 0 2rem
    @media (max-width 568px)
      grid-auto-flow column
      grid-template-columns 0
      grid-auto-columns calc(100% - 16px * 2)
      grid-template-rows 1fr
      padding 0
      overflow-x scroll
      scroll-snap-type x proximity
      &::before, &::after
        content ''
        width 0
    > .item
      padding 1rem
      background var(--purewhite)
      box-shadow inset 0 0 0 1rem var(--darkness)
    .img-box
      display flex
      align-items center
      justify-content center
      height 200px
    .img
      max-height 5rem
      margin 10px auto
  .more
    min-height 200px
    padding 1rem
    > .title
      display block
      margin-bottom 2rem
      background var(--darkness)
      color var(--brightness)
      font-size 1.5rem
      font-family 'Poppins', sans-serif
    > .sub
      color var(--shadow)
      font-size 10pt

  
      



