/*
* Imports
*/
@import 'https://fonts.googleapis.com/css?family=Roboto:300,400,500';

/*
* Variables
*/
sm = 16px
cz = #f0f0f0


html, body 
  height 100vh
  color #555
  font-family "Roboto", "Helvetica", "Arial", sans-serif
  line-height 1.5
  text-align center

.wrapper 
  display grid
  grid-gap sm
  grid-template .5fr 2fr .5fr/1fr
  height 100%
  padding sm

.header
  background cz

.menu
  grid-row 1/2

.content 
  grid-row 2/3


.slider 
  position relative
  width 100vw
  height 100%
  margin 0 -16px
  &-list 
    display grid
    grid-gap sm
    grid-auto-flow column
    grid-template-columns sm
    grid-auto-columns "calc(80% - %s)" % sm
    grid-template-rows 1fr
    height 100%
    overflow-x scroll
    scroll-snap-type x proximity
    &::before, &::after
      content ''
      width 16px
  &-item 
    display block
    justify-self center
    width 100%
    height 100%
    padding sm
    background cz
  &-prev, &-next
    position absolute
    display flex
    align-items center
    justify-content center
    top calc(50% - 25px)
    width 50px
    height 50px
    
  &-prev
    left auto
    right calc(100% - 50px)
  &-next
    left calc(100% - 50px)
    right auto


.footer 
  grid-row 3/4
  background cz
